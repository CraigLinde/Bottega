<h1 id = "myheading">Angular Items</h1>

<% @angular_portfolio_items.each do |p_item|%>
  <p><%= p_item.title %></p>
  <p><%= p_item.subtitle %></p>
  <p><%= p_item.body %></p>
  <p><%= image_tag p_item.thumb_image unless p_item.thumb_image.nil? %></p>
  <p><%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %></p>
  <p><%= link_to "Edit", edit_portfolio_path(portfolio_item.id)if logged_in?(:site_admin) %></p> 
  <p><%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item.id), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p> 

  <%end%>
  