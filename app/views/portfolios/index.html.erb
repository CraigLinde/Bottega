<h1 id = "myheading">Welcome to the Portfolio Page</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<%@portfolio_items.each do |p_item|%>
  <p><%= p_item.title %></p>
  <p><%= p_item.subtitle %></p>
  <p><%= p_item.body %></p>
  <p><%= image_tag p_item.thumb_image unless p_item.thumb_image.nil? %></p>
  <%= link_to "Edit", edit_portfolio_path(p_item.id) %>

  <%end%>
